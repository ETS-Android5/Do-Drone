<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoDroneActivity"
    android:id="@+id/drawerLayout">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dodronebg">

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="268dp"
            android:layout_height="70dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/hori_white" />

        <TextView
            android:id="@+id/logo2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/hyundai_m"
            android:text="by XXKD"
            android:textColor="@color/msg_colour"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/logo1"
            app:layout_constraintStart_toEndOf="@+id/logo1" />

        <LinearLayout
            android:id="@+id/layoutBig"
            android:layout_width="wrap_content"
            android:layout_height="270dp"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.894">

            <LinearLayout
                android:id="@+id/layoutClass"
                android:layout_width="500dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/classGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/strokebtn"
                    android:orientation="vertical"
                    android:paddingTop="20dp">

                    <Button
                        android:id="@+id/classBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/playbookwhite100"
                         />

                    <TextView
                        android:id="@+id/classText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hyundai_m"
                        android:gravity="center"
                        android:text="수업 영상\n보러가기"
                        android:textColor="#FFFFFF"
                        android:textSize="23sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/guideGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/strokebtn"
                    android:orientation="vertical"
                    android:paddingTop="20dp">

                    <Button
                        android:id="@+id/guideBtn"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/guidebookwhite100"
                         />

                    <TextView
                        android:id="@+id/infoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hyundai_m"
                        android:gravity="center"
                        android:text="두드론\n사용 방법"
                        android:textColor="#FFFFFF"
                        android:textSize="23sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutCtrl"
                android:layout_width="169dp"
                android:layout_height="130dp"
                android:layout_gravity="bottom"

                android:orientation="horizontal"
                android:layout_marginLeft="10dp">

                <Button
                    android:id="@+id/ctrlBtn"
                    android:layout_width="match_parent"
                    android:layout_height="91dp"
                    android:background="@drawable/strokebtn"
                    android:backgroundTint="#974316"
                    android:backgroundTintMode="screen"
                    android:fontFamily="@font/hyundai_m"

                    android:text="조종하기\nControl"
                    android:textSize="25sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageMenu"
            android:layout_width="46dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/hyundai_b"
            android:src="@drawable/ic_baseline_menu_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_menu_24"
            app:tint="#EFE1E1"
            tools:srcCompat="@drawable/ic_baseline_menu_24" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#B3151515"
        app:headerLayout="@layout/layout_nav_header"
        app:itemShapeFillColor="#FFFFFF"
        app:itemTextAppearance="@font/hyundai_m"
        app:itemTextColor="@color/white"
        app:menu="@menu/nav_menu" />



</androidx.drawerlayout.widget.DrawerLayout>